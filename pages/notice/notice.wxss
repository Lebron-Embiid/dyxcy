/* pages/notice/notice.wxss */
.notice_item{
  overflow: hidden;
  padding: 40rpx 30rpx 30rpx;
  border-bottom: 1rpx solid #F4F4F4;
  margin-bottom: 10rpx;
}
.notice_head{
  width: 15%;
  float: left;
}
.notice_head image{
  display: block;
  width: 76rpx;
  height: 76rpx;
  border-radius: 50%;
}
.notice_content{
  display: block;
  float: right;
  width: 85%;
}
.notice_name{
  color: #0f4378;
  font-size: 28rpx;
  margin: 20rpx 0 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.notice_detail{
  color: #353535;
  line-height: 1.5;
  font-size: 24rpx;
  margin-bottom: 20rpx;
}
.notice_poster{
  position: relative;
  width: 458rpx;
  height: 540rpx;
}
.notice_poster .poster_img{
  display: block;
  width: 100%;
  height: 100%;
}
.notice_poster .play_btn{
  position: absolute;
  width: 62rpx;
  height: 76rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}